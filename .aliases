#!/bin/bash
alias vi="vim"
alias mtr='mtr -o "LRDS N BAW" '
alias up="sudo dnf update --refresh || sudo zypper up || sudo apt upgrade; notify-send 'System update finished'"
alias ambilight="python2 $HOME/Development/Programming/ambilight/controller/main.py"
alias vlc-fullscreen='dbus-send --print-reply --dest=org.mpris.MediaPlayer2.vlc /org/mpris/MediaPlayer2 org.freedesktop.DBus.Properties.Set string:"org.mpris.MediaPlayer2" string:"Fullscreen" variant:boolean:true'
alias flactomp3='for a in *.flac; do ffmpeg -i "$a" -ab 320k -map_metadata 0 -id3v2_version 3 -qscale:a 0 "${a[@]/%flac/mp3}"; done'
alias diff="colordiff"
alias lsd='ls --group-directories-first'
alias nmon='NMON="cmtu" nmon'
alias lock="qdbus org.freedesktop.ScreenSaver /ScreenSaver org.freedesktop.ScreenSaver.Lock"
#alias oc="docker run --rm -it -v /etc/ssl/certs:/etc/ssl/certs:ro -v oc_cli:/root/.kube paulfantom/openshift-client"
alias oc="docker run --rm -it -v /etc/ssl/certs:/etc/ssl/certs:ro -v $HOME/.kube:/root/.kube:Z paulfantom/openshift-client"
alias afk="qdbus org.freedesktop.ScreenSaver /org/freedesktop/ScreenSaver Lock"

alias hollywood="docker run --rm -it jess/hollywood"

alias rdocker="DOCKER_HOST=tcp://nas:2375 docker"
alias rmolecule="DOCKER_HOST=tcp://nas:2375 molecule"

# IP addresses
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="sudo ifconfig | grep -Eo 'inet (addr:)?([0-9]*\\.){3}[0-9]*' | grep -Eo '([0-9]*\\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias ips="sudo ifconfig -a | grep -o 'inet6\\? \\(addr:\\)\\?\\s\\?\\(\\(\\([0-9]\\+\\.\\)\\{3\\}[0-9]\\+\\)\\|[a-fA-F0-9:]\\+\\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

